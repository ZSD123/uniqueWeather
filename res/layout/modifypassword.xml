<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6FA"
    android:id="@+id/lin"
    android:orientation="vertical" >

<activity.CustomFontTextView
    android:id="@+id/text_resetpassword"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="20dp"
    android:text="修改密码"
    android:textSize="30sp"
    />
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:orientation="horizontal"
    >
      <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="旧密码"
        android:textSize="20sp"
        android:id="@+id/oldpassword"
        />
    <EditText 
        android:id="@+id/password1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="请输入原来的密码"
        android:inputType="textPassword"
        />
     <ImageView
         android:id="@+id/kekanmima1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/eyeclose"
         android:clickable="true"
         />
</LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:orientation="horizontal"
    >
      <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新密码"
        android:textSize="20sp"
        android:id="@+id/newpassword"
        />
    <EditText 
        android:id="@+id/password2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="请输入新密码"
         android:inputType="textPassword"
        />
       <ImageView
         android:id="@+id/kekanmima2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/eyeclose"
         android:clickable="true"
         />
</LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:orientation="horizontal"
    >
      <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新密码"
        android:textSize="20sp"
        android:id="@+id/newpassword1"
        />
    <EditText 
        android:id="@+id/password3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="请再次输入新密码"
         android:inputType="textPassword"
        />
       <ImageView
         android:id="@+id/kekanmima3"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/eyeclose"
         android:clickable="true"
         />
</LinearLayout>

    <Button 
        android:id="@+id/ensure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="确认"
        />

</LinearLayout>