<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/scrollview"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:background="#E4EDF5"
     android:scrollbars="vertical">
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <TextView 
    android:id="@+id/zunchenText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="20sp"
    android:layout_marginTop="20sp"
    android:layout_marginLeft="10sp"
    android:text="尊称"
    />
    <EditText 
        android:id="@+id/zunchen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="20sp"
        android:background="@android:drawable/alert_light_frame"
        android:enabled="false"
        />
</LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
   <TextView 
    android:id="@+id/sexText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="20sp"
    android:layout_marginTop="10sp"
    android:layout_marginLeft="10sp"
    android:text="性别"
    />
   <Spinner 
       android:id="@+id/spinner1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
       />
   
</LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <TextView 
    android:id="@+id/ageText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="20sp"
    android:layout_marginTop="10sp"
    android:layout_marginLeft="10sp"
    android:text="年龄"
    />
      <EditText 
        android:id="@+id/nianling"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10sp"
        android:inputType="number"
        android:background="@android:drawable/alert_light_frame"
        android:enabled="false"
        />
   </LinearLayout> 
   <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
       >
     <TextView 
         android:id="@+id/birthText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="20sp"
          android:layout_marginTop="10sp"
          android:layout_marginLeft="10sp"
          android:text="生日"
       />
       <EditText 
        android:id="@+id/shengri"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10sp"
        android:inputType="date"
        android:background="@android:drawable/alert_light_frame"
          android:enabled="false"
        />
   </LinearLayout> 
      <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
       >
        <TextView 
            android:id="@+id/xingzuoText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="20sp"
          android:layout_marginTop="10sp"
          android:layout_marginLeft="10sp"
          android:text="星座"
       />
         <EditText 
        android:id="@+id/xingzuo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10sp"
        android:inputType="text"
        android:background="@android:drawable/alert_light_frame"
       android:enabled="false"
        />
        </LinearLayout>
<LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
       >
    <TextView 
        android:id="@+id/zhiyeText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="20sp"
          android:layout_marginTop="10sp"
          android:layout_marginLeft="10sp"
          android:text="职业"
         />
       <Spinner 
       android:id="@+id/spinner2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
       />
    </LinearLayout>
     
      <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
       >
        <TextView 
            android:id="@+id/mobileText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="20sp"
          android:layout_marginTop="10sp"
          android:layout_marginLeft="10sp"
          android:text="手机号"
         />
      <EditText 
        android:id="@+id/shoujihao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10sp"
        android:inputType="text"
         android:enabled="false"
        android:background="@android:drawable/alert_light_frame"
        />
       </LinearLayout>
        <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
       >
        <TextView 
            android:id="@+id/emailText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="20sp"
          android:layout_marginTop="10sp"
          android:layout_marginLeft="10sp"
          android:text="邮箱"
         />
      <EditText 
        android:id="@+id/youxiang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10sp"
        android:inputType="text"
         android:enabled="false"
        android:background="@android:drawable/alert_light_frame"
        />
       </LinearLayout>
    <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
       >
        <TextView 
            android:id="@+id/schoolText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="20sp"
          android:layout_marginTop="10sp"
          android:layout_marginLeft="10sp"
          android:text="学校"
         />
      <EditText 
        android:id="@+id/xuexiao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10sp"
        android:inputType="text"
         android:enabled="false"
        android:background="@android:drawable/alert_light_frame"
        />
       </LinearLayout>
       
        <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
       >
        <TextView 
            android:id="@+id/suozaidiText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="20sp"
          android:layout_marginTop="10sp"
          android:layout_marginLeft="10sp"
          android:text="所在地"
         />
          <EditText 
        android:id="@+id/suozaidi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10sp"
        android:inputType="text"
        android:enabled="false"
        android:focusable="false"
        android:background="@android:drawable/alert_light_frame"
        />
      </LinearLayout>
        <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
       >
          <TextView 
              android:id="@+id/guxiangText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="20sp"
          android:layout_marginTop="10sp"
          android:layout_marginLeft="10sp"
          android:text="故乡"
         />
          <EditText 
        android:id="@+id/guxiang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10sp"
        android:inputType="text"
        android:enabled="false"
        android:focusable="false"
        android:background="@android:drawable/alert_light_frame"
        />
    </LinearLayout>
      
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
         >
      <Button 
          android:id="@+id/button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:text="编    辑"
          android:textSize="20sp"
          />
       <Button 
          android:id="@+id/button1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:text="取    消"
          android:textSize="20sp"
          android:visibility="gone"
          />
     </LinearLayout>

</LinearLayout>
</ScrollView>